                     LogAdd($Log,$LogFile,"I", $DomainUser+"\"+$USERID+"="+$STD_NEW)
                     ;---------------------------------------------------------
                     if $STD_NEW = 1
                        MapDrives ($FileINI_REGION_NEW)
                     else
                        MapDrives ($FileINI_REGION)
                     endif
                  endif
               endif
         endselect

      ;case Ucase("%USERDOMAIN%") = "DSP73"
