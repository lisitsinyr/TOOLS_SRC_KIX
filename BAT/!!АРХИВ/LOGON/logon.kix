   select

      ;case Ucase("%USERDOMAIN%") = "REGION"
      case Ucase($DomainUser_01) = "REGION"

         select
            case $R3 = "13"
               ;---------------------------------------------------
               ; ЭТО терминал
               ;---------------------------------------------------
