                     ;---------------------------------------------------
                     ; ЭТО терминал ВВГУ
                     ;---------------------------------------------------
                     MapDrives ($FileINI_REGION_RKC13_NEW_22)
                  else
                     MapDrives ($FileINI_REGION_RKC13)
                  endif 
               endif
            case 1
               ;---------------------------------------------------
               ; ЭТО терминал
               ;---------------------------------------------------
               if REGION_MAPS_NEW
                  $STD_NEW = CheckUser_Login_STD_NEW ($Path_TOOLS+"\"+$UsersNetwork, $DomainUser, $USERID)
                  LogAdd($Log,$LogFile,"I", $DomainUser+"\"+$USERID+"="+$STD_NEW)
                  ;---------------------------------------------------------
