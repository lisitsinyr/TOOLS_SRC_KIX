                     if $STD_NEW = 1
                        ;$TerminalUserAppDataDir = "W:\Application Data"
                        $TerminalUserAppDataDir = %USERPROFILE%+"\Application Data"
                        MapDrives ($FileINI_DSP73_REGION_NEW)
                     else
                        MapDrives ($FileINI_DSP73_REGION)
                     endif
                  else
                     if DSP_MAPS_NEW_22
                        ;---------------------------------------------------
                        ; ЭТО терминал ВВГУ
                        ;---------------------------------------------------
