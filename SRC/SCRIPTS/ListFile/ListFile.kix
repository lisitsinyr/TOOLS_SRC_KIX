    BREAK ON

    ; -------------------------------------------------------
    ; 0.DEFAULT
    ;-------------------------------------------------------
    ; DATETIME_STAMP
    $DATETIME_STAMP=%DATETIME_STAMP%
    ; Формат имени файлф журнала: FILENAME,DT,...
    $LOG_FILENAME_FORMAT=%LOG_FILENAME_FORMAT%

    ;-------------------------------------------------------
