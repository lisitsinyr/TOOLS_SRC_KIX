;----------------------------------------------------------------------------
; UTF8toWin
;----------------------------------------------------------------------------
function UTF8toWin($s)
;begin
   $Result = ""
   $i = 1
   while $i < Len($s)+1
      $Ch = substr($s,$i,1)

      if ASC($Ch) = 208 or ASC($Ch) = 209
         $i = $i + 1
         $Ch = substr($s,$i,1)
      endif

      $Result = $Result + ""+Chr($UTF8win1251[ASC($Ch)])
      $i = $i + 1
   Loop
   $UTF8toWin = $Result
endfunction

;----------------------------------------------------------------------------
; DOStoWin
;----------------------------------------------------------------------------
function DOStoWin($s)
;begin
   $Result = ""
   $i = 1
   while $i < Len($s)+1
      $Ch = substr($s,$i,1)
      $Result = $Result + ""+Chr($DOSwin1251[ASC($Ch)])
      $i = $i + 1
   Loop
   $DOStoWin = $Result
endfunction

;----------------------------------------------------------------------------
; WintoDOS
;----------------------------------------------------------------------------
function WinToDOS($s)
;begin
   $Result = ""
   $i = 1
   while $i < Len($s)+1
      $Ch = substr($s,$i,1)
      $Result = $Result + ""+Chr($winDOS1251[ASC($Ch)])
      $i = $i + 1
   Loop
   $WinToDOS = $Result
endfunction

function GetFileName($filespec)
   dim $bash
   $GetFileName=$filespec
   $bash=instrRev($filespec,'\')
   if $bash or instrRev($filespec,'.')
      $GetFileName=substr($filespec,$bash+1)
   endif
endfunction

;-------------------------------------------------------------------------------
;  ListFile ($ASourcePath, $AMask)
;-------------------------------------------------------------------------------
function ListFile ($ASourcePath, $AMask)
   Dim $LResult
;begin
   $LFile = Dir ($ASourcePath+"\"+$AMask)
   WHILE @ERROR = 0 AND $LFile
      IF $LFile <> "." AND $LFile <> ".."
         IF (GetFileAttr ($ASourcePath + "\" + $LFile) & 16) = 0
            $LFileNameSource = $ASourcePath + "\" + $LFile
            $LFileSizeSource = GetFileSize ($LFileNameSource)
            $LFileTimeSource = GetFileTime ($LFileNameSource)

            $FileName     = $LFile

            $FullFileName = $LFileNameSource
            $FullFileDir  = $ASourcePath
            $FileDir      = GetFileName($ASourcePath)
            $FileTime     = $LFileTimeSource
            $FileSize     = $LFileSizeSource
            if INSTR ($Shablon, "$$SFile") > 0
               $ResExe = Execute ($Shablon)'SFile='+$SFile ?
            endif
         endif
      endif
      if (@ERROR = 0) or (@ERROR = 5)
         $LFile = Dir("")
      endif
   loop
EndFunction

;-------------------------------------------------------------------------------
;  ListDir ($ASourcePath, $AMask)
;-------------------------------------------------------------------------------
function ListDir ($ASourcePath, $AMask)
;begin
   $Level = $Level + 1
   ;------------------------------------------------------------
   ; Dir
   ;------------------------------------------------------------
   $DirName     = WinToDOS(GetFileName($ASourcePath))
   $FullDirName = WinToDOS($ASourcePath)
   ;-----------------------------------------------
   if $NLevel
      if ($Level > $NLevel)
         if INSTR ($Shablon, "SDir") > 0
            $ResExe = Execute ($Shablon) $SDir ?
         endif
      endif
   else
      if INSTR ($Shablon, "SDir") > 0
         $ResExe = Execute ($Shablon) $SDir ?
      endif
   endif
   ;-----------------------------------------------
   $LFile = Dir ($ASourcePath+"\*.*")
   WHILE @ERROR = 0 AND $LFile
      IF $LFile <> "." AND $LFile <> ".."
         IF GetFileAttr ($ASourcePath + "\" + $LFile) & 16    ; Это каталог
            $LSourcePath = $ASourcePath + "\" + $LFile
            ListFile($LSourcePath, $AMask)
            if $NLevel
               if ($NLevel >= $Level)
                  ListDir ($LSourcePath, $AMask)
               endif
            else
               ListDir ($LSourcePath, $AMask)
            endif
         endif
      endif
      if (@ERROR = 0) 
         $LFile = Dir("")
      endif
   loop
   $Level = $Level - 1
EndFunction

